#!/usr/bin/env python3
"""
CCC Command: /test-mcps
Wrapper script to run MCP testing command
"""

import os
import sys
import subprocess
from pathlib import Path

def main():
    # Get CCC root directory
    ccc_root = Path(__file__).parent.parent
    script_path = ccc_root / "commands" / "test-mcps.py"
    
    if not script_path.exists():
        print("Error: MCP testing script not found")
        sys.exit(1)
    
    # Run the MCP testing script
    try:
        result = subprocess.run([sys.executable, str(script_path)], 
                              cwd=str(ccc_root),
                              capture_output=False)
        sys.exit(result.returncode)
    except Exception as e:
        print(f"Error running MCP tests: {e}")
        sys.exit(1)

if __name__ == "__main__":
    main()